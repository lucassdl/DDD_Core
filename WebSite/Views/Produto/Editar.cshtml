@model ProdutoModel

<h3>@ViewData["Titulo"]</h3>

<form action="Editar" method="post">
    <div class="form-horizontal">
        <hr />

        <input type="hidden" name="id" asp-for="Id"/>

        <div class="form-group">
            <label asp-for="NomeDoProduto" class="col-md-2">Nome do Produto</label>
            <div class="col-md-10">
                <input type="text" asp-for="NomeDoProduto" maxlength="20" class="form-control" />
                @Html.ValidationMessageFor(p => p.NomeDoProduto, null, new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Editar" class="btn btn-info" />
        </div>
    </div>
</form>