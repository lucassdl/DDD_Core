@model IEnumerable<ProdutoModel>

<h3>@ViewData["Titulo"]</h3>

<form asp-action="Index" method="post">
    <div class="form-horizonal">
        @Html.ActionLink("Novo Registro", "Salvar", "Produto")
        <hr />

        <div class="x_content">
            <table id="datatables-buttons" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Ações</th>
                        <th>Código</th>
                        <th>Nome Produto</th>
                    </tr>
                </thead>
                <tbody>
                    @Html.AntiForgeryToken()

                    @foreach (var produto in Model)
                    {
                    <tr>
                        <td>
                            @Html.ActionLink("Editar", "Editar", "Produto", new { @id = produto.Id })
                            @Html.ActionLink("Deletar", "Excluir", "Produto", new { @id = produto.Id })
                        </td>
                        <td>
                            @Html.DisplayFor(model => produto.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(model => produto.NomeDoProduto)
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>